extends layout

block content
    h2 Register
    ul.errors
        if errors
            each error, i in errors
                li.alert.alert-danger #{error.msg}
    p Please register using the form below
    form(method='post', action='/users/register',enctype="multipart/form-data")
        .form-group
            label Name
            input.form-control(type='text',name='name',placeholder='Enter name')
        .form-group
            label Email
            input.form-control(type='email',name='email',placeholder='Enter e-mail')
        .form-group
            label Username
            input.form-control(type='text',name='username',placeholder='Enter username')
        .form-group
            label Password
            input.form-control(type='password',name='password')
        .form-group
            label Confirm password
            input.form-control(type='password',name='password2')
        .form-group
            label Profile image
            input(type='file',name='profileimage',accept="application/x-zip-compressed,image/*")
        input.btn.btn-default(type='submit',name='submit',value='Register')